@model IEnumerable<PhanPhoiSach.Models.purchase_order>

@{
    ViewBag.Title = "Phiếu Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Phiếu nhập</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.supplier.supplier_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_order_recipent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_order_created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_order_total_money)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.supplier.supplier_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_order_recipent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_order_created_at)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_order_total_money)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.purchase_order_id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.purchase_order_id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.purchase_order_id })
        </td>
    </tr>
}

</table>
