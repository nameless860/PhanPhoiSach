@model IEnumerable<PhanPhoiSach.Models.book>

@{
    ViewBag.Title = "Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.supplier.supplier_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_field)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_seling_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_purchase_price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.supplier.supplier_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_field)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_seling_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_purchase_price)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.book_id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.book_id })
        </td>
    </tr>
}

</table>
