@model PhanPhoiSach.Models.book

@{
    ViewBag.Title = "Tạo sách mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo sách mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.book_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.book_name)
                @Html.ValidationMessageFor(model => model.book_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.book_author, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.book_author)
                @Html.ValidationMessageFor(model => model.book_author)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.book_field, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.book_field)
                @Html.ValidationMessageFor(model => model.book_field)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nhà xuất bản</label>
            <div class="col-md-10">
                @Html.DropDownList("fk_supplier", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_supplier)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.book_seling_price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.book_seling_price)
                @Html.ValidationMessageFor(model => model.book_seling_price)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.book_purchase_price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.book_purchase_price)
                @Html.ValidationMessageFor(model => model.book_purchase_price)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
