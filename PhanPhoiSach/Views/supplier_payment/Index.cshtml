@model IEnumerable<PhanPhoiSach.Models.purchase_payment>

@{
    ViewBag.Title = "Thanh toán đại lý";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thanh toán - Nhà xuất bản</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.supplier.supplier_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_payment_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_payment_money_pay)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.supplier.supplier_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_payment_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_payment_money_pay)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.purchase_payment_id }) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id=item.purchase_payment_id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.purchase_payment_id })
        </td>
    </tr>
}

</table>
