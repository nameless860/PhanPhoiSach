@model PhanPhoiSach.Models.agency

@{
    ViewBag.Title = "Sửa thông tin đại lý";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thông tin</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Đại lý</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.agency_id)

        <div class="form-group">
            @Html.LabelFor(model => model.agency_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.agency_name)
                @Html.ValidationMessageFor(model => model.agency_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.agency_address, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.agency_address)
                @Html.ValidationMessageFor(model => model.agency_address)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.agency_phone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.agency_phone)
                @Html.ValidationMessageFor(model => model.agency_phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
