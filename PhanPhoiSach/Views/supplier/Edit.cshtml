@model PhanPhoiSach.Models.supplier

@{
    ViewBag.Title = "Sửa thông tin NXB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thông tin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nhà xuất bản</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.supplier_id)

        <div class="form-group">
            @Html.LabelFor(model => model.supplier_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_name)
                @Html.ValidationMessageFor(model => model.supplier_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.supplier_address, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_address)
                @Html.ValidationMessageFor(model => model.supplier_address)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.supplier_phone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_phone)
                @Html.ValidationMessageFor(model => model.supplier_phone)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.supplier_bank_account_number, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_bank_account_number)
                @Html.ValidationMessageFor(model => model.supplier_bank_account_number)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
