@model IEnumerable<PhanPhoiSach.Models.supplier>

@{
    ViewBag.Title = "Nhà xuất bản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nhà xuất bản</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.supplier_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplier_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplier_phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplier_bank_account_number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.supplier_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplier_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplier_phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplier_bank_account_number)
        </td>
        <td>
            @Html.ActionLink("Sừa", "Edit", new { id=item.supplier_id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.supplier_id })
        </td>
    </tr>
}

</table>
